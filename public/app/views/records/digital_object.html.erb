<%
   file_versions = @digital_object['file_versions'].select{|fv| fv['publish']}

   published_external_documents = []
   if @digital_object['external_documents'].length > 0
     @digital_object['external_documents'].each do |exdoc|
       published_external_documents.push(exdoc) if exdoc['publish'] === true
     end
   end
%>
<div class="title-pane">
  <div class="row-fluid">
    <div class="span3">

    </div>
    <div class="span9">
      <h2>
        <%= @digital_object.title %></h2>
    </div>
  </div>
</div>
<div class="content-pane">
  <div class="row-fluid">
    <div class="span3">
      <div id="">
        <ul class="nav nav-list as-nav-list" data-spy="affix">
          <li><a href="#summary"><%= I18n.t("archival_object._public.section.summary") %> <span class="icon-chevron-right"></span></a></li>
          <% if file_versions.length > 0 %>
            <li><a href="#file_versions"><%= I18n.t("file_version._plural") %> <span class="badge badge-info"><%= file_versions.length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @digital_object['dates'].length > 0 %>
            <li><a href="#dates"><%= I18n.t("date._plural") %> <span class="badge badge-info"><%= @digital_object['dates'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @digital_object['extents'].length > 0 %>
            <li><a href="#extents"><%= I18n.t("extent._plural") %> <span class="badge badge-info"><%= @digital_object['extents'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @digital_object['linked_agents'].length > 0 %>
            <li><a href="#linked_agents"><%= I18n.t("agent._plural") %> <span class="badge badge-info"><%= @digital_object['linked_agents'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @digital_object['subjects'].length > 0 %>
            <li><a href="#subjects"><%= I18n.t("subject._plural") %> <span class="badge badge-info"><%= @digital_object['subjects'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if @digital_object['notes'].length > 0 %>
            <li><a href="#notes"><%= I18n.t("note._plural") %> <span class="badge badge-info"><%= @digital_object['notes'].length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if published_external_documents.length > 0 %>
            <li><a href="#external_documents"><%= I18n.t("external_document._plural") %> <span class="badge badge-info"><%= published_external_documents.length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
          <% if children? %>
            <li><a href="#components"><%= I18n.t("digital_object._public.section.components") %> <span class="badge badge-info"><%= children.length %></span><span class="icon-chevron-right"></span></a></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="span9">
      <fieldset class="form-horizontal">
        <section id="summary">
          <h3><%= I18n.t("digital_object._public.section.summary") %></h3>
          <dl class="dl-horizontal">
            <dt><%= I18n.t("digital_object.digital_object_id") %></dt>
            <dd class="identifier-display">
              <span class="identifier-display-part"><%= @digital_object['digital_object_id'] %></span>
            </dd>
          </dl>
        </section>

        <%= render :partial => "file_versions", :locals => {:file_versions => file_versions} %>
        <%= render :partial => "dates", :locals => {:dates => @digital_object['dates']} %>
        <%= render :partial => "extents", :locals => {:extents => @digital_object['extents']} %>
        <%= render :partial => "agents", :locals => {:linked_agents => @digital_object['linked_agents']} %>
        <%= render :partial => "subjects", :locals => {:subjects => @digital_object['subjects']} %>
        <%= render :partial => "notes", :locals => {:notes => @digital_object['notes']} %>
        <%= render :partial => "external_documents", :locals => {:external_documents => published_external_documents} %>
        <%= render :partial => "components", :locals => {:record_type => "digital_object"} %>
      </fieldset>

      <br/>
      <br/>

    </div>
  </div>
</div>