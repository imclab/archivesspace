<div class="row-fluid">
  <div class="span12">
    <div class="record-toolbar">
        <div class="btn-group pull-left">
          <div class="pull-left save-changes">
            <button type="submit" class="btn btn-primary btn-small"><%= I18n.t("actions.save_prefix") %></button>
          </div>
        </div>
      <div class="btn-toolbar pull-right">
        <% if !@user.is_system_user && @user.username.downcase != current_user.downcase %>
          <div class="btn-group">
            <div class="btn btn-inline-form">
              <%= button_delete_action url_for(:controller => :users, :action => :delete, :id => @user.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
