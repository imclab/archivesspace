<%
   read_only = false if read_only.blank?

   hierarchy_rules = {
    :resource => {
      :can_add_child => {
        :type => :archival_object,
        :action_label =>  I18n.t("resource._html.action.add_child"),
        :record_label => I18n.t("archival_object._html.singular")
      }
    },
    :archival_object => {
      :can_add_child => {
        :type => :archival_object,
        :action_label =>  I18n.t("archival_object._html.action.add_child"),
        :record_label => I18n.t("archival_object._html.singular")
      },
      :can_add_sibling => {
        :type => :archival_object,
        :action_label =>  I18n.t("archival_object._html.action.add_sibling"),
        :record_label => I18n.t("archival_object._html.singular")
      },
      :can_move => true,
      :can_transfer => :resource
    },
    :digital_object => {
      :can_add_child => {
        :type => :digital_object_component,
        :action_label =>  I18n.t("digital_object._html.action.add_child"),
        :record_label => I18n.t("digital_object_component._html.singular")
      }
    },
    :digital_object_component => {
      :can_add_child => {
        :type => :digital_object_component,
        :action_label =>  I18n.t("digital_object_component._html.action.add_child"),
        :record_label => I18n.t("digital_object_component._html.singular")
      },
      :can_add_sibling => {
        :type => :digital_object_component,
        :action_label =>  I18n.t("digital_object_component._html.action.add_sibling"),
        :record_label => I18n.t("digital_object_component._html.singular")
      },
      :can_move => true
   }
 }

%>

<div class="archives-tree-container">

  <div id="archives_tree_toolbar"></div>

  <div  id="archives_tree" class="archives-tree"
        data-read-only="<%= read_only %>"
        data-rules="<%= hierarchy_rules.to_json %>"
  ></div>

  <script>
    AS.tree_data = $.parseJSON('<%= j(@tree.to_json.html_safe) %>');
  </script>

  <div id="tree_template"><!--
       {macro render_node_link(node)}
          <a href="#tree::${node.node_type}_${node.id}" title="${AS.encodeForAttribute(node.title)}">
            ${node.title|h}
            {if node.level}<span class="badge">${node.level}</span>{/if}
          </a>
       {/macro}

       {macro render_children(nodes)}
        {if nodes && nodes.length > 0}
        <ul>
           {for node in nodes}
              <li id="${node.node_type}_${node.id}" class="${node.node_type} {if node.has_children} jstree-closed{/if}" rel="${node.node_type}" data-id="${node.id}">
                 ${render_node_link(node)}
                 ${render_children(node.children)}
              </li>
           {/for}
        </ul>
        {/if}
     {/macro}

     {macro render_parent(node)}
        <li id="${node.node_type}_${node.id}" class="${node.node_type} root" rel="${node.node_type}" data-id="${node.id}">
           ${render_node_link(node)}
           {if node.children && node.children.length > 0}
            ${render_children(node.children)}
           {/if}
        </li>
     {/macro}

     <ul class="jstree-classic">
        ${render_parent(tree)}
     </ul>
  --></div>

  <div id="tree_toolbar_template"><!--
    <div class="btn-toolbar">
      <div class="btn-group"></div>
    </div>
  --></div>



  <div id="tree_nodenavigation_toolbar_template"><!--
    <div class="btn-group">
      {if defined('previous')}
        <a href="#tree::${previous}" class="btn btn-mini"><span class="icon-arrow-left"></span></a>
      {else}
        <a disabled="disabled" class="btn btn-mini"><span class="icon-arrow-left"></span></a>
      {/if}
      {if defined('next')}
        <a href="#tree::${next}" class="btn btn-mini"><span class="icon-arrow-right"></span></a>
      {else}
        <a disabled="disabled" class="btn btn-mini"><span class="icon-arrow-right"></span></a>
      {/if}
    </div>
  --></div>

  <% if not read_only %>

    <div id="tree_nodeactions_toolbar_template"><!--
      <div class="btn-group">
        <div class="btn-group">
          {if rules.hasOwnProperty("can_add_child")}
            <a class="btn btn-mini add-child" rel="${rules.can_add_child.type}" href="javascript:void(0);" data-record-label="${rules.can_add_child.record_label}" title="${rules.can_add_child.action_label}">
              ${rules.can_add_child.action_label}
            </a>
          {/if}
          {if rules.hasOwnProperty("can_add_sibling")}
            <a class="btn btn-mini add-sibling" rel="${rules.can_add_sibling.type}" href="javascript:void(0);" data-record-label="${rules.can_add_child.record_label}" title="${rules.can_add_sibling.action_label}">
              ${rules.can_add_sibling.action_label}
            </a>
          {/if}
        </div>
      {if rules.hasOwnProperty("can_move")}
        <div class="btn-group dropdown move-node-menu">
          <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#" title="Move">
            <%= I18n.t "actions.move" %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            {if !parent.hasClass("root")}
              <li><a href="javascript:void(0);" class="move-node move-node-up-level" data-target-node-id="${parent.parents("li:first").attr("id")}" data-target-index="${parent.index()}"><span class="icon-arrow-left"></span> <%= I18n.t "actions.move_up_a_level" %></a></li>
            {/if}

            {var children_count = parent.find("> ul > li").length}
            {if children_count > 1}
              {if node.index() > 0}
                <li><a href="javascript:void(0);" class="move-node move-node-up" data-target-node-id="${parent.attr("id")}" data-target-index="${node.index()-1}"><span class="icon-arrow-up"></span> <%= I18n.t "actions.move_up" %></a></li>
              {/if}
              {if node.index() < children_count - 1}
                <li><a href="javascript:void(0);" class="move-node move-node-down" data-target-node-id="${parent.attr("id")}" data-target-index="${node.index()+1}"><span class="icon-arrow-down"></span> <%= I18n.t "actions.move_down" %></a></li>
              {/if}
            {/if}

            {if defined('siblings') && siblings.length > 0}
              <li class="dropdown-submenu">
                <a href="javascript:void(0);"><span class="icon-arrow-right"></span> <%= I18n.t "actions.move_down_into" %></a>
                <ul class="dropdown-menu">
                {for sibling in siblings}
                  <li><a href="javascript:void(0);" class="move-node move-node-down-into" data-target-node-id="${sibling.id}">${sibling.title}</a></li>
                {/for}
                </ul>
              </li>
            {/if}
          </ul>
        </div>
      {/if}
      {if rules.hasOwnProperty("can_transfer")}
        <div class="btn-group dropdown">
          <a class="btn btn-mini dropdown-toggle transfer-node" data-toggle="dropdown" href="#" title="<%= I18n.t "actions.transfer" %>">
            <%= I18n.t "actions.transfer" %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu tree-transfer-form">
            <li>
              <%= form_tag("#{root_path}archival_objects/${node_id}/transfer") do |f| %>
                <%= form_context :transfer, {} do |form| %>
                <fieldset>
                  <%= form.hidden_input "current_resource_id", "${root_object_id}" %>
                  <div class="alert alert-error missing-ref-message" style="display: none;"><%= I18n.t "archival_object._html.messages.please_select_a_resource_for_transfer" %></div>
                  <%= render :partial => "resources/linker", :locals => { :form => form, :exclude_ids => [@tree.record_uri] }%>
                </fieldset>
                <div class="form-actions">
                  <button class="btn btn-primary pull-left"><%= I18n.t("actions.transfer") %></button>
                  <a class="btn btn-cancel pull-right" href="#"><%= I18n.t("actions.cancel") %></a>
                </div>
                <% end %>
              <% end %>
            </li>
          </ul>
        </div>
      {/if}
      </div>
    --></div>

    <div id="tree_finish_action_template"><!--
      <div class="pull-right">
        <a href="${APP_PATH}${config.root_node_type}s/${config.root_object_id}${location.hash}" class="btn btn-mini btn-success"><%= I18n.t "actions.finish_editing" %></a>
      </div>
    --></div>

    <div id="tree_revert_changes_label_template"><!--
      <%= I18n.t ("actions.revert") %>
    --></div>

  <% end  %>

  <div id="tree_loading_notice_template"><!--
    <div class="alert alert-info tree-loading-notice">
      <%= I18n.t ("actions.loading") %>
    </div>
  --></div>

</div>